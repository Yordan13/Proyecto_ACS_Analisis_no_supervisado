package Futbol;

import java.io.File;

import org.opencv.core.Mat;
import org.opencv.videoio.VideoCapture;
import org.opencv.videoio.Videoio;

public class FootballVideo extends AbstractVideo {
  public FootballVideo(File data){
    super(data);
    VideoCapture camera = new VideoCapture("video.mp4");
    fps = (int) camera.get(Videoio.CAP_PROP_FPS);
    cantFrames = (int) camera.get(Videoio.CAP_PROP_FRAME_COUNT);
    duracion = fps / cantFrames;
    
    frames = new AbstractFrame[cantFrames];
    AbstractFrame frameActual;
    for (int i = 0; i < cantFrames; i++) {
      //Instanciar AbstractFrames
    }
  }
}
